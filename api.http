# Get all books
GET http://192.168.1.62:3001/books HTTP/1.1
Content-Type: application/json

###

# Create a book
POST http://192.168.1.62:3001/books HTTP/1.1
Content-Type: application/json

{
  "title": "Harry Potter"
}

###

# Update a book
PUT http://192.168.1.62:3001/books/1 HTTP/1.1
Content-Type: application/json

{
  "title": "Dark Tower"
}

###

# Delete a book
DELETE http://192.168.1.62:3001/books/1 HTTP/1.1
Content-Type: application/json
